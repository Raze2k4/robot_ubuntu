<?xml version="1.0"?>
<robot name="ugv_robot">

    <!-- Than -->
    <link name="base_link">
        <visual>
            <geometry>
              <box size="0.5 0.3 0.2"/>
            </geometry>
            <material name="pink">
                <color rgba="1 0.4 0.7 1"/>
            </material>
            <origin xyz="-0.2 0.15 -0.1" rpy="1.57 0.0 0.0"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.5 0.3 0.2"/>
            </geometry>
        </collision>
        <inertial>
             <mass value="5"/>
             <inertia ixx="0.05417" ixy="0" ixz="0" iyy="0.12083" iyz="0.0" izz="0.14167"/>
        </inertial>
        <gazebo>
    <plugin name="diff_drive_controller" filename="libgazebo_ros_diff_drive.so">
        <ros>
            <namespace>/</namespace>
            <remapping>cmd_vel:=cmd_vel</remapping>
            <remapping>odom:=odom</remapping>
        </ros>
        <updateRate>100.0</updateRate>
        <leftJoint>joint_wheel_tr_trc</leftJoint>
        <leftJoint>joint_wheel_tr_s</leftJoint>
        <rightJoint>joint_wheel_ph_trc</rightJoint>
        <rightJoint>joint_wheel_ph_s</rightJoint>
        <wheelSeparation>0.32</wheelSeparation> <!-- khoảng cách 2 bên bánh xe -->
        <wheelDiameter>0.10</wheelDiameter> <!-- 2 lần bán kính -->
        <torque>5</torque>
        <commandTopic>cmd_vel</commandTopic>
        <odometryTopic>odom</odometryTopic>
        <odometryFrame>odom</odometryFrame>
        <robotBaseFrame>base_link</robotBaseFrame>
        <publishTf>true</publishTf>
    </plugin>
</gazebo>

    </link>

    <!-- Banh xe -->
    <link name="wheel_tr_trc">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.02"/>
            </geometry>
           
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.02"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="10"/>
            <inertia ixx="0.0013167" ixy="0.0" ixz="0.0" iyy="0.0013167" iyz="0.0" izz="0.0025"/>
        </inertial>

    </link>
    
    <link name="wheel_ph_trc">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.02"/>
            </geometry>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.02"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="10"/>
            <inertia ixx="0.0013167" ixy="0.0" ixz="0.0" iyy="0.0013167" iyz="0.0" izz="0.0025"/>
        </inertial>

    </link>

    <link name="wheel_tr_s">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.02"/>
            </geometry>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.02"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="10"/>
            <inertia ixx="0.0013167" ixy="0.0" ixz="0.0" iyy="0.0013167" iyz="0.0" izz="0.0025"/>
        </inertial>
    </link>

    <link name="wheel_ph_s">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.02"/>
            </geometry>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.02"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="10"/>
            <inertia ixx="0.0013167" ixy="0.0" ixz="0.0" iyy="0.0013167" iyz="0.0" izz="0.0025"/>
        </inertial>
    </link>

    <!-- Khop noi banh xe -->
    <joint name="joint_wheel_tr_trc" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_tr_trc"/>
        <origin xyz="-0.2 0.16 -0.1" rpy="1.57 0.0 0.0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="joint_wheel_ph_trc" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_ph_trc"/>
        <origin xyz="0.2 0.16 -0.1" rpy="1.57 0.0 0.0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="joint_wheel_tr_s" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_tr_s"/>
        <origin xyz="-0.2 -0.16 -0.1" rpy="1.57 0.0 0.0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="joint_wheel_ph_s" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_ph_s"/>
        <origin xyz="0.2 -0.16 -0.1" rpy="1.57 0.0 0.0"/>
        <axis xyz="0 0 1"/>
    </joint>

<gazebo>
  <plugin name="diff_drive_controller" filename="libgazebo_ros_diff_drive.so">
    <ros>
      <namespace>/</namespace>
      <remapping>cmd_vel:=/cmd_vel</remapping>
    </ros>
    <robotNamespace>/</robotNamespace>
    <commandTopic>cmd_vel</commandTopic>
    <odometryTopic>odom</odometryTopic>
    <odometryFrame>odom</odometryFrame>
    <robotBaseFrame>base_link</robotBaseFrame>
    <wheelSeparation>0.32</wheelSeparation>
    <wheelDiameter>0.1</wheelDiameter>
    <leftJoint>joint_wheel_tr_s</leftJoint>
    <rightJoint>joint_wheel_ph_s</rightJoint>
    <leftJoint>joint_wheel_tr_trc</leftJoint> <!-- nếu robot có 4 bánh drive thì thêm cả -->
    <rightJoint>joint_wheel_ph_trc</rightJoint>
    <torque>5</torque>
    <commandTimeout>1.0</commandTimeout>
    <broadcastTF>true</broadcastTF>
  </plugin>
</gazebo>

<!-- <camera> -->

<!-- Base Camera -->
<link name="camera_link">
        <visual>
            <geometry>
                <box size="0.05 0.05 0.05"/>
            </geometry>
        </visual>
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.1"/>
            <inertia ixx="0.0001" ixy="0.000" ixz="0.00" iyy="0.0001" iyz="0.0" izz="0.0001"/>
        </inertial>
    </link>
    <!-- Camera Joint -->
    <joint name="camera_joint" type="fixed">
        <parent link="base_link"/>
        <child link="camera_link"/>
        <origin xyz="-0.15 0.0 0.12" rpy="0 0 3.14"/>
    </joint>
    <!-- Camera Work -->
    <gazebo reference="camera_link">
        <material>Gazebo/Red</material>
        <sensor name="camera" type="camera">
            <pose> 0 0 0 0 0 0 </pose>
            <visualize>true</visualize>
            <update_rate>10</update_rate>
            <camera>
                <horizontal_fov>1.089</horizontal_fov>
                <image>
                    <format>R8G8B8</format>
                    <width>640</width>
                    <height>480</height>
                </image>
                <clip>
                    <near>0.05</near>
                    <far>8.0</far>
                </clip>
            </camera>
            <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
                <frame_name>camera_link_optical</frame_name>
            </plugin>
        </sensor>
    </gazebo>

    <!-- Sensor -->

<!-- Base Sensor -->
 <link name="base_scan">
    <visual>
      <origin xyz="0 0 0.0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.05"/>
      </geometry>
     <material name="green">
        <color rgba="0.0 1 0.0 1.0"/>
     </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.114" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001" />
    </inertial>
  </link>

  <!-- Sensor Joint -->
<joint name="scan_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_scan"/>
    <origin xyz="0 0 0.3" rpy="0 0 0"/>
  </joint>

  <!-- Sensor Work -->
<gazebo reference="base_scan">
    <material>Gazebo/FlatBlack</material>
    <sensor type="ray" name="lds_lfcd_sensor">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <update_rate>5</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1</resolution>
            <min_angle>-3.14159</min_angle>
            <max_angle>3.14159</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.120</min>
          <max>3.5</max>
          <resolution>0.015</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_ros_lds_lfcd_controller" filename="libgazebo_ros_laser.so">
        <topicName>scan</topicName>
        <frameName>base_scan</frameName>
      </plugin>
    </sensor>
  </gazebo>

</robot>